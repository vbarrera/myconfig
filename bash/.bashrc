#   -------------------------------

RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
BLUE="\[\033[0;34m\]"
MAG="\[\033[0;35m\]"
NO_COLOUR="\[\033[0m\]"



parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}



#   Change Prompt
#   ------------------------------------------------------------
    export PS1="________________________________________________________________________________\n|$GREEN \w @ $BLUE \h $YELLOW(\u)$MAG\$(parse_git_branch)$NO_COLOUR \n| => "
    export PS2="| => "

#   Set Paths
#   ------------------------------------------------------------
    export PATH="$PATH:/usr/local/bin/"

    # added by Miniconda2 4.1.11 installer
    export PATH="/Users/victorbarrera/software/miniconda2/bin:$PATH"
    
    # add bin in home folder
    export PATH="/Users/victorbarrera/bin:$PATH"

    # add pandoc path
    export PATH="/Applications/RStudio.app/Contents/MacOS/pandoc:$PATH"

    # add samtools path

    export PATH="/Users/victorbarrera/software/samtools/bin:$PATH"

#   Set Default Editor
#   ------------------------------------------------------------
